    <forum></forum>
    <source>https://github.com/zag2me/plugin.video.colinfurzeinventor</source>
    <website>http://kodi.tv</website>
    <email>zag@kodi.tv</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
		<logo>resources/logo.png</logo>
